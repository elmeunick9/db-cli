{
    "name": "@hubbit86/db-cli",
    "version": "0.1.6",
    "description": "Not an Object Relational Mapper",
    "engines": {
        "node": ">= 18.12",
        "pnpm": ">=3"
    },
    "bin": {
        "db": "./dist/cli.js"
    },
    "main": "./dist/lib.js",
    "types": "./dist/types/generator/lib/index.d.ts",
    "type": "module",
    "devDependencies": {
        "@types/jest": "~29.5",
        "@types/node": "~18",
        "@types/pg": "^8.10.5",
        "@typescript-eslint/eslint-plugin": "~6.2",
        "@typescript-eslint/parser": "~6.2",
        "esbuild": "^0.19.4",
        "eslint": "~8.46",
        "eslint-config-prettier": "~9.0",
        "eslint-plugin-jest": "~27.2",
        "jest": "~29.6",
        "prettier": "~3.0",
        "rimraf": "~5.0",
        "ts-api-utils": "~1.0",
        "ts-jest": "~29.1",
        "typescript": "~5.1"
    },
    "scripts": {
        "start": "node dist/cli.js",
        "clean": "rimraf coverage build tmp",
        "prebuild": "npm run lint && tsc -p tsconfig.json --noEmit",
        "build": "npm run build:cli && npm run build:lib && npm run build:lib:types",
        "build:cli": "esbuild --bundle src/main.ts                --format=esm --platform=node --outfile=dist/cli.js",
        "build:lib": "esbuild --bundle src/generator/lib/index.ts --format=esm --platform=node --outfile=dist/lib.js",
        "build:lib:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.types.json",
        "lint": "eslint . --ext .ts --ext .mts",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "prettier": "prettier --config .prettierrc --write .",
        "test:watch": "jest --watch"
    },
    "author": "Robert Planas Jimenez",
    "license": "MIT",
    "dependencies": {
        "commander": "^11.1.0",
        "pg": "^8.11.3",
        "postgres-date": "^2.1.0",
        "readline": "^1.3.0",
        "tslib": "~2.6"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/elmeunick9/db-cli.git"
    },
    "files": [
        "package.json",
        "dist/",
        "LICENSE"
    ]
}
